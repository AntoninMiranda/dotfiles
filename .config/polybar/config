format-connected = <label-connected>
;format-connected = <ramp-signal> <label-connected>
format-connected-foreground = #000000
format-connected-background = ${colors.first}
format-connected-prefix = "  "
format-connected-prefix-foreground = #000000
format-connected-prefix-background = ${colors.first}

label-disconnected = %ifname% disconnected
label-disconnected-foreground = #000000
label-disconnected-background = ${colors.first}

format-disconnected = <label-disconnected>
format-disconnected-foreground = #ffffff
format-disconnected-background = ${colors.first}
format-disconnected-prefix = "  "
format-disconnected-prefix-foreground = #000000
format-disconnected-prefix-background = ${colors.first}

ramp-signal-0 = ▁
ramp-signal-1 = ▂
ramp-signal-2 = ▃
ramp-signal-3 = ▄
ramp-signal-4 = ▅
ramp-signal-5 = ▆
ramp-signal-6 = ▇
ramp-signal-7 = █
